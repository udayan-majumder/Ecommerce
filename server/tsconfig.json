{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true, // Faster compilation
    "forceConsistentCasingInFileNames": true, // Avoid Windows/Linux path bugs
    "moduleResolution": "node", // Find node_modules properly
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
